<h2>Add Exercise</h2>

<form id="addExercise">
    <span class="labels">Exercise:</span>
    <input type="text" name="exercise" id="exercise"><br><br>
    <span class="labels">Reps:</span>
    <input type="number" name="reps" id="reps "min="1"><br><br>
    <span class="labels">Weight:</span>
    <input type="number" name="weight" id="weight "min="1"><br><br>
    <span class="labels">Date:</span>
    <input type="date" name="date" id="date"><br><br>
    <span class="labels">Unit in lbs?:</span>
    <input type="checkbox" name="unitCheck" id="unitCheck" checked><br><br>
    <input type="submit" name="Add Exercise" value = "Add Exercise" id="addButton">
</form><br>

<table id="exerciseTable">
    <tr>
        <th>Name</th>
        <th>Reps</th>
        <th>Weight</th>
        <th>Date</th>
        <th>Unit</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    
    {{#if results}}
        {{#each results}}
            <tr>
                <td>{{this.name}}</td>
                <td>{{this.reps}}</td>
                <td>{{this.weight}}</td>
                <td>{{this.date}}</td>
                <td>{{this.lbs}}</td>
                <td><a href="/updateTable?id={{this.id}}"><input type="button" value="Update"></a></td>
                <td>
                    <input type="button" name="delete" value="Delete" onClick="deleteData('dataTable',{{this.id}})">
                    <input type="hidden" id="delete{{this.id}}">
                </td>
            </tr>
        {{/each}}
    {{/if}}
</table>

<script src="./script.js"></script>