<h2>Update Exercise</h2>

<form action="/updateReturn">
    <span class="labels">Exercise:</span>
    <input type="text" name="exercise" id="exercise" value="{{results.name}}"><br><br>
    <span class="labels">Reps:</span>
    <input type="number" name="reps" id="reps" value="{{results.reps}}"><br><br>
    <span class="labels">Weight:</span>
    <input type="number" name="weight" id="weight" value="{{results.weight}}"><br><br>
    <span class="labels">Date:</span>
    <input type="date" name="date" id="date" value="{{results.date}}"><br><br>
    <span class="labels">Units in lbs?:</span>
    {{#if results.lbs}}
		<input type="checkbox" name="unitCheck" id="unitCheck" checked><br><br>
	{{else}}
		<input type="checkbox" name="unitCheck" id="unitCheck"><br><br>
    {{/if}}
    <input type="hidden" name="id" value={{results.id}}>
    <input type="submit" name="updateExercise" value="Update" id="updateExercise">
</form>